<div class="container">
  <div class="my-4 d-flex justify-content-between align-items-center">
    <div class="link-back">
      <%= link_to'Home', blogs_index_path, class:"text-dark"  %>
      <span>|</span>
      <%= link_to'Back', posts_path, class:"text-dark"  %>
    </div>
    <%= image_tag 'concierge-logo.png', class: "w-25 h-25" %>
  </div>
  <hr>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto my-5">
      <p id="notice"><%= notice %></p>
      <div>
        <img class="w-100" src="<%= @post.image %>" alt="img-blog">
        <h2 class="mt-5 mb-2"><%= @post.title %></h2>
        <p><%= @post.text.html_safe %></p>
      </div>
    </div>
  </div>
</div>
