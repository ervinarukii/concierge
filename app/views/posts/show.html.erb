<header class="masthead" style="background-image: url(<%= @post.image %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-12 mx-auto">
      <div class="d-flex justify-content-between align-items-center">
        <div class="link-back">
          <%= link_to'Home', blogs_index_path, class:"text-light"  %>
          <span>|</span>
          <%= link_to'Back', posts_path, class:"text-light"  %>
        </div>
        <%= image_tag 'concierge-logo.png', class: "w-25 h-auto" %>
      </div>
      </div>
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="post-heading">
          <h1>Your Blog's Title</h1>
          <h2 class="subheading">Your Tagline</h2>
          <!-- <span class="meta">Posted by
            <a href="#">Start Bootstrap</a>
            on August 24, 2018</span> -->
        </div>
      </div>
    </div>
  </div>
</header>
  <hr>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto my-5">
      <p id="notice"><%= notice %></p>
      <div>
        <!-- <img class="w-100" src="<%#= @post.image %>" alt="img-blog"> -->
        <h2 class="mt-5 mb-2"><%= @post.title %></h2>
        <p><%= @post.text.html_safe %></p>
      </div>
    </div>
  </div>
</div>
