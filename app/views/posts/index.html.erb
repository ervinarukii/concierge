<header class="masthead" style="background-image: url(<%= image_path "post-bg.jpg"%>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-12 col-md-10 mx-auto text-center">
        <div class="post-heading">
          <h1 style="font-size: 55px;" class="font-weight-bold">Concierge Blog</h1>
          <!-- <span class="subheading">Lorem ipsum donot</span> -->
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <p id="notice"><%= notice %></p>

  <!-- <h1 class="text-center gold-font">Posts</h1>
  <div class="section-line"></div> -->
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto pb-5 content-blog">
        <% @posts.each do |post| %>
        <div class="posting mb-3">
          <h3><%= link_to post.title, post, class: "font-weight-bold" %></h3>
          <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <p><%= truncate post.text.html_safe, length:300, escape: false %></p>
            </div>
          </div>
        </div>
